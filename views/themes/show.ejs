        <td class="tableHeader">Background Color</td>
        <td class="tableHeader"> </td>
        <td class="tableHeader"> </td>
    </tr>
    </thead>

    <tbody>
        <% stylesets.forEach((styleset, index) => { %>
            <tr>
                <td><%= index + 1 %></td>
                <td><%= styleset.fontColor %></td>
                <td><%= styleset.googleFontFamily %></td>
                <td><a href="<%= styleset.googleFontHref %>" target="_blank">LINK</a></td>
                <td><%= styleset.mainBackgroundColor %></td>
                <td><button class="update-button" type="submit"> üîÑ </button></td>
                <td>
                    <form action="/themes/<%=themes._id%>/stylesets?_method=DELETE" method="POST">
